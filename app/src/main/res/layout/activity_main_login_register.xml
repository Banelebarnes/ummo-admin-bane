<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E3">

    <shem.com.materiallogin.MaterialLoginView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loginActionText="LOGIN"
        app:loginHint="Email"
        app:loginPasswordHint="Password code"
        app:loginTextColor="@color/ummo"
        app:loginTitle="Ummo login"
        app:registerActionText="SIGN UP"
        app:registerHint="Email"
        app:registerIcon="@drawable/ic_person_add_white_24dp"
        app:registerUserName="Ummo UserName"
        app:registerCellNumber="76"
        app:registerServiceName="Service Provider Name"
        app:registerCategoryName="Service Category Name"
        app:registerRepeatPasswordHint="Cell Number"
        app:registerPasswordHint="User name"
        app:registerTextColor="@color/ummo"
        app:registerTitle="Join us" />
</FrameLayout>
